#!/usr/bin/env bash
# Configure domains to point to webservers


query_dns () {
	local domain="$1"
	local subdomain="$2"

	if [ -z "$subdomain" ];then
		subdomains=("www" "lb-01" "web-01" "web-02")
	else
		subdomains=("$subdomain")
	fi

	for sub in "${subdomains[@]}"; do
		echo "The subdomain [$sub] is a $(dig +short -t CNAME "$sub.$subdomain" | awk '{print toupper($1)}') record and points to $(dig +short "$sub.$domain")"
	done
}

domain="$1"
subdomain="$2"

query_dns "$domain" "$subdomain"
